  <servlet>
    <servlet-name>imageRetrieve</servlet-name>
    <servlet-class>in.xnnyygn.vcar.servlet.ImageRetrieveServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>imageRetrieve</servlet-name>
    <url-pattern>/retrieveImage</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>imageShow</servlet-name>
    <servlet-class>in.xnnyygn.vcar.servlet.ImageShowServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>imageShow</servlet-name>
    <url-pattern>/showImage</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>imageCropAndResize</servlet-name>
    <servlet-class>in.xnnyygn.vcar.servlet.ImageCropAndResizeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>imageCropAndResize</servlet-name>
    <url-pattern>/cropAndResizeImage</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>